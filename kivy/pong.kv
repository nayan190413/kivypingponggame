<PongPaddle>:
    size:20,150
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size


<PongBall>:
    size:60,60
    canvas:
        Ellipse:
            pos:self.pos
            size:self.size

<PongGame>:
    ball:pong_ball
    player1:player_left
    player2:player_right
    canvas:
        Rectangle:
            pos:self.center_x-10,0
            size:20,self.height

    Label:
        font_size:70
        center_x:root.width/4
        top:root.top - 200
        text:str(root.player2.score)

    Label:
        font_size:70
        center_x:root.width *3/4
        top:root.top - 200
        text:str(root.player1.score)

    PongBall:
        id:pong_ball
        center:self.parent.center

    PongPaddle:
        id : player_left
        x: root.x
        center_y:root.center_y

    PongPaddle:
        id : player_right
        x: root.width - self.width
        center_y:root.center_y
